{
  "manifest_version": 3,
  "name": "LeetCode â†’ Tracker Sync",
  "version": "0.1.6",
  "description": "Sync recent AC submissions (last 150 days) to your tracker.",
  "permissions": ["activeTab", "tabs", "scripting", "storage"],
  "host_permissions": [
    "https://leetcode.com/*",
    "http://127.0.0.1/*",       
    "http://localhost/*"        
  ],
  "background": {
    "service_worker": "bg.js",  
    "type": "module"
  },  "action": {
    "default_title": "Sync LeetCode",
    "default_popup": "popup.html"
  },
  "web_accessible_resources": [
    {
      "resources": ["injected.js"],
      "matches": ["https://leetcode.com/*"]
    }
  ]
}
